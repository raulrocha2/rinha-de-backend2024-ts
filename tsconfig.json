{
  "compilerOptions": {
    "target": "ES2021",
    "outDir": "dist",
    "module": "commonjs",
    "rootDir": "src",
    "baseUrl": "src",
    "esModuleInterop": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "Node",
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "@/*": ["*"],
      "@/tests/*": ["../tests/*"]
    }
  },
  "include": ["src"]
}
